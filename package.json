{
  "name": "msgcode",
  "version": "2.3.0",
  "description": "AI agent on Mac with iMessage-first transport",
  "type": "module",
  "bin": {
    "msgcode": "./bin/msgcode"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "test": "LOG_FILE=false LOG_LEVEL=warn IMSG_PATH=/usr/bin/false PATH=\"$HOME/.bun/bin:$PATH\" bun test",
    "bdd": "NODE_ENV=test NODE_OPTIONS=\"--import tsx\" ./node_modules/.bin/cucumber-js --import 'features/**/*.ts' --format progress",
    "test:all": "npm test && npm run bdd && npm run docs:check",
    "docs:check": "NODE_OPTIONS=\"--import tsx\" node scripts/check-doc-sync.ts",
    "jsonl:check": "tsx scripts/test-jsonl-parser.ts",
    "lmstudio:toolstress": "tsx scripts/lmstudio/toolcall-stress.ts --base-url http://127.0.0.1:1234 --iterations 20 --timeout-ms 60000",
    "mlx:toolstress": "npm run lmstudio:toolstress",
    "mlx:smoke": "npm run lmstudio:toolstress",
    "desktop:smoke": "bash scripts/desktop/smoke-desktop-toolbus.sh \"$PWD\"",
    "memory:e2e": "NODE_OPTIONS=\"--import tsx\" tsx scripts/memory/e2e-recall.ts"
  },
  "keywords": [
    "imessage",
    "bot",
    "ai",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/commander": "^2.12.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.2",
    "croner": "^9.1.0",
    "dotenv": "^16.4.0",
    "sqlite-vec": "^0.1.7-alpha.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@types/node": "^20.11.0",
    "bun": "^1.3.9",
    "bun-types": "^1.3.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
