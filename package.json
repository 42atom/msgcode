{
  "name": "msgcode",
  "version": "2.2.0",
  "description": "iMessage-based AI Bot system for Mac",
  "type": "module",
  "bin": {
    "msgcode": "./bin/msgcode"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "test": "LOG_FILE=false LOG_LEVEL=warn IMSG_PATH=/usr/bin/false PATH=\"$HOME/.bun/bin:$PATH\" bun test",
    "bdd": "NODE_ENV=test NODE_OPTIONS=\"--import tsx\" ./node_modules/.bin/cucumber-js --import 'features/**/*.ts' --format progress",
    "test:all": "npm test && npm run bdd && npm run docs:check",
    "docs:check": "NODE_OPTIONS=\"--import tsx\" node scripts/check-doc-sync.ts",
    "jsonl:check": "tsx scripts/test-jsonl-parser.ts",
    "mlx:smoke": "bash scripts/mlx-lab/smoke-all.sh",
    "desktop:smoke": "bash scripts/desktop/smoke-desktop-toolbus.sh \"$PWD\""
  },
  "keywords": [
    "imessage",
    "bot",
    "ai",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/commander": "^2.12.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.2",
    "croner": "^9.1.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@cucumber/cucumber": "^11.3.0",
    "bun-types": "^1.3.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
