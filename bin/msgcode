#!/usr/bin/env node
/**
 * msgcode CLI 可执行文件
 */

import { spawn } from "child_process";
import { fileURLToPath } from "url";
import { dirname } from "path";

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// 使用 tsx 运行 cli.ts
const child = spawn("npx", ["tsx", `${__dirname}/../src/cli.ts`, ...process.argv.slice(2)], {
    stdio: "inherit",
});

child.on("exit", (code) => {
    process.exit(code ?? 0);
});
